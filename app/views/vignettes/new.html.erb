<!-- Validation failure messages -->
<% if @vignette.errors.any? %>
  <% @vignette.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Vignette</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_vignette" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for content -->
      <div class="form-group">
        <label for="content" class="control-label">
          Content
        </label>

        <textarea id="content" name="content" placeholder="Content" class="form-control" rows="3"><%= @vignette.content %></textarea>
      </div>

      <button class="btn btn-success">
        Create Vignette
      </button>
      or
      <a href="/vignettes">Cancel</a>
    </form>
  </div>
</div>
