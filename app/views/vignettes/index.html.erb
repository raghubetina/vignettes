<div class="page-header">
  <h1>
    Vignettes
    <a href="/vignettes/new" class="btn btn-lg btn-success">New Vignette</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Content</th>
        <th>Actions</th>
      </tr>

      <% @vignettes.each do |vignette| %>
      <tr>
        <td><%= vignette.content %></td>
        <td>
          <a href="/vignettes/<%= vignette.id %>" class="btn btn-primary">Show</a>
          <a href="/vignettes/<%= vignette.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_vignette/<%= vignette.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
