<!-- Validation failure messages -->
<% if @response.errors.any? %>
  <% @response.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Response</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_response" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for content -->
      <div class="form-group">
        <label for="content" class="control-label">
          Content
        </label>

        <textarea id="content" name="content" placeholder="Content" class="form-control" rows="3"><%= @response.content %></textarea>
      </div>

      <!-- Label and input for vignette_id -->
      <div class="form-group">
        <label for="vignette_id" class="control-label">
          Vignette
        </label>

        <%= select_tag(:vignette_id, options_from_collection_for_select(Vignette.all, :id, :content, @response.vignette_id), :class => "form-control") %>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @response.user_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Response
      </button>
      or
      <a href="/responses">Cancel</a>
    </form>
  </div>
</div>
